<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_check"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:padding="10dp">

        <CheckedTextView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_checked" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/ll_check" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_goods"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="90分ultra smart跑鞋 智能版(含芯片)男款 冲浪蓝 40"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginTop="5dp"
            tools:text="小计:¥199"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:text="¥199"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_black_rect">

            <TextView
                android:id="@+id/btn_minus"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="#3999"
                android:gravity="center"
                android:text="—"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:digits="0123456789"
                android:background="@drawable/shape_black_rect"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:id="@+id/btn_plus"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="#3999"
                android:gravity="center"
                android:text="+"
                android:textSize="18dp" />

        </LinearLayout>

    </RelativeLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:background="#999999" />-->

</RelativeLayout>