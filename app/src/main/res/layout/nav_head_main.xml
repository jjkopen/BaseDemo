<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:background="@color/colorAccent"
    android:paddingTop="@dimen/toolbar_padding_top">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/selector_drawerbg_logined"
        android:tint="#EFF8678D" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/android"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_head"
        android:layout_below="@id/iv_head"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="让记忆有时去追"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/dl_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_rad_3_white"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="LV4"
            android:textColor="@android:color/white"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/dl_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_name"
            android:layout_marginLeft="5dp"
            android:layout_toStartOf="@+id/iv_edit"
            android:background="@drawable/shape_rad_5_gray"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="1dp"
            android:text="正式会员"
            android:textColor="@color/colorAccent"
            android:textSize="9dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_head"
        android:layout_below="@id/ll_name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="硬币: 1036.00"
            android:textColor="#FDC7D6"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_B_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="B币: 0.00"
            android:textColor="#FDC7D6"
            android:textSize="13dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_head"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_navigation_header_notification"
        android:tint="@android:color/white" />

</RelativeLayout>